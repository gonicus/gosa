{
  "layout": "qx.ui.layout.VBox",
  "type": "widget",
  "class": "qx.ui.container.Composite",
  "addOptions": {
    "flex" : 1
  },
  "layoutConfig": {
    "spacing": "CONST_SPACING_Y"
  },
  "extensions": {
    "resources": {
      "favicon": "@Ligature/friend"
    },
    "tabConfig": {
      "title": "tr('Printer relations')",
      "icon": "favicon"
    }
  },
  "children": [
    {
      "layout": "qx.ui.layout.Grid",
      "type": "widget",
      "class": "qx.ui.container.Composite",
      "layoutConfig": {
        "spacingX": "CONST_SPACING_X",
        "spacingY": "CONST_SPACING_Y"
      },
      "extensions": {
        "layoutOptions": {
          "columnFlex": {
            "column": [0, 1],
            "flex": 1
          }
        }
      },
      "children": [
        {
          "buddyModelPath": "gotoUserPrinter",
          "addOptions": {
            "row": 0,
            "column": 0
          },
          "properties": {
            "text": "tr('User')"
          },
          "class": "gosa.ui.widgets.QLabelWidget"
        },
        {
          "class": "gosa.ui.widgets.QTableWidgetWidget",
          "modelPath": "gotoUserPrinter",
          "addOptions": {
            "row": 1,
            "column": 0
          },
          "properties": {
            "multivalue": true,
            "height" : 350
          },
          "extensions": {
            "guiProperties": {
              "editTitle": "tr('Edit printer user')",
              "columns": {
                "cn": "tr('Name')",
                "description": "tr('Description')"
              },
              "columnRenderers": {
                "1": {
                  "class": "gosa.ui.table.cellrenderer.Html"
                }
              },
              "droppable": true,
              "draggable": true,
              "dragDropType": "gosa/user"
            }
          }
        },
        {
          "buddyModelPath": "gotoGroupPrinter",
          "addOptions": {
            "row": 0,
            "column": 1
          },
          "properties": {
            "text": "tr('Group')"
          },
          "class": "gosa.ui.widgets.QLabelWidget"
        },
        {
          "class": "gosa.ui.widgets.QTableWidgetWidget",
          "modelPath": "groupMembership",
          "addOptions": {
            "row": 1,
            "column": 1
          },
          "properties": {
            "multivalue": true,
            "height" : 350
          },
          "extensions": {
            "guiProperties": {
              "editTitle": "tr('Edit printer group')",
              "columns": {
                "cn": "tr('Name')",
                "description": "tr('Description')"
              },
              "columnRenderers": {
                "1": {
                  "class": "gosa.ui.table.cellrenderer.Html"
                }
              },
              "selectorOptions": {
                "filters": {
                  "base": {
                    "use": "_adjusted_parent_dn",
                    "mode": "children"
                  },
                  "type": true,
                  "search": true
                }
              },
              "sortByColumn": "cn",
              "droppable": true,
              "draggable": true,
              "dragDropType": "gosa/group"
            }
          }
        }
      ]
    }
  ]
}