{
  "type": "widget",
  "class": "qx.ui.container.Composite",
  "layout": "qx.ui.layout.VBox",
  "extensions": {
    "resources": {
      "favicon": "@Ligature/circle"
    },
    "tabConfig": {
      "title": "tr('Objectgroup')",
      "icon": "favicon"
    }
  },
  "children": [
    {
      "class": "qx.ui.container.Composite",
      "layout": "qx.ui.layout.Grid",
      "layoutConfig": {
        "spacingX": "CONST_SPACING_X",
        "spacingY": "CONST_SPACING_Y"
      },
      "extensions": {
        "layoutOptions": {
          "columnFlex": {
            "column": 1,
            "flex": 1
          }
        }
      },
      "children": [
        {
          "class": "gosa.ui.widgets.QLabelWidget",
          "buddyModelPath": "cn",
          "properties": {
            "text": "tr('Common name')"
          },
          "addOptions": {
            "row": 0,
            "column": 0
          }
        },
        {
          "class": "gosa.ui.widgets.QLineEditWidget",
          "modelPath": "cn",
          "addOptions": {
            "row": 0,
            "column": 1
          },
          "properties": {
            "tabIndex": 1
          }
        },
        {
          "class": "gosa.ui.widgets.QLabelWidget",
          "buddyModelPath": "ou",
          "properties": {
            "text": "tr('Organizational unit')"
          },
          "addOptions": {
            "row": 1,
            "column": 0
          }
        },
        {
          "class": "gosa.ui.widgets.QLineEditWidget",
          "modelPath": "ou",
          "addOptions": {
            "row": 1,
            "column": 1
          },
          "properties": {
            "tabIndex": 2
          }
        },
        {
          "class": "gosa.ui.widgets.QLabelWidget",
          "buddyModelPath": "description",
          "properties": {
            "text": "tr('Description')"
          },
          "addOptions": {
            "row": 2,
            "column": 0
          }
        },
        {
          "class": "gosa.ui.widgets.QLineEditWidget",
          "modelPath": "description",
          "addOptions": {
            "row": 2,
            "column": 1
          },
          "properties": {
            "tabIndex": 3
          }
        },
        {
          "class": "gosa.ui.widgets.QLabelWidget",
          "buddyModelPath": "businessCategory",
          "properties": {
            "text": "tr('Business category')"
          },
          "addOptions": {
            "row": 3,
            "column": 0
          }
        },
        {
          "class": "gosa.ui.widgets.QLineEditWidget",
          "modelPath": "businessCategory",
          "addOptions": {
            "row": 3,
            "column": 1
          },
          "properties": {
            "tabIndex": 4
          }
        },
        {
          "class": "gosa.ui.widgets.QLabelWidget",
          "buddyModelPath": "o",
          "properties": {
            "text": "tr('Organization')"
          },
          "addOptions": {
            "row": 4,
            "column": 0
          }
        },
        {
          "class": "gosa.ui.widgets.QLineEditWidget",
          "modelPath": "o",
          "addOptions": {
            "row": 4,
            "column": 1
          },
          "properties": {
            "tabIndex": 5
          }
        }
      ]
    },
    {
      "class": "gosa.ui.widgets.GroupBox",
      "layout": "qx.ui.layout.Canvas",
      "properties": {
        "legend": "tr('Members')"
      },
      "addOptions": {
        "flex": 1
      },
      "children": [{
        "class": "gosa.ui.widgets.QTableWidgetWidget",
        "modelPath": "member",
        "addOptions": {
          "edge": 0
        },
        "properties": {
          "multivalue": true,
          "height" : 350
        },
        "extensions": {
          "guiProperties": {
            "editTitle": "tr('Add members')",
            "columns": {
              "_type": "tr('Type')",
              "title": "tr('Title')",
              "description": "tr('Description')",
              "dn": "tr('DN')"
            },
            "columnWidths": {
              "0": 32,
              "1": "1*",
              "2": "1*",
              "3": "1*"
            },
            "columnRenderers": {
              "0": {
                "class": "gosa.ui.table.cellrenderer.ImageByType",
                "params": [22, 22]
              },
              "2": {
                "class": "gosa.ui.table.cellrenderer.Html"
              }
            },
            "selectorOptions": {
              "filters": {
                "base": {
                  "use": "_adjusted_parent_dn",
                  "mode": "children"
                },
                "type": true,
                "search": true
              },
              "skipInitialSearch": true
            },
            "sortByColumn": "_type"
          }
        }
      }]
    }
  ]
}