{
    "type": "widget",
    "class": "qx.ui.container.Composite",
    "layout": "qx.ui.layout.VBox",
    "addOptions": {
        "flex": 1
    },
    "layoutConfig": {
        "spacing": "CONST_SPACING_Y"
    },
    "extensions": {
        "resources": {
            "favicon": "images/user.png"
        },
        "tabConfig": {
            "title": "tr('POSIX')",
            "icon": "favicon"
        }
    },
    "children": [{
        "class": "gosa.ui.widgets.GroupBox",
        "layout": "qx.ui.layout.Grid",
        "layoutConfig": {
            "spacingX": "CONST_SPACING_X",
            "spacingY": "CONST_SPACING_Y"
        },
        "properties": {
            "legend": "tr('Generic POSIX settings')"
        },
        "extensions": {
            "layoutOptions": {
                "columnFlex": {
                    "column": 1,
                    "flex": 1
                }
            }
        },
        "children": [{
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "homeDirectory",
            "addOptions": {
                "row": 0,
                "column": 0
            },
            "properties": {
                "text": "tr('Home directory')"
            }
        }, {
            "class": "gosa.ui.widgets.QLineEditWidget",
            "modelPath": "homeDirectory",
            "addOptions": {
                "row": 0,
                "column": 1
            },
            "properties": {
                "tabIndex": 1
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "loginShell",
            "addOptions": {
                "row": 1,
                "column": 0
            },
            "properties": {
                "text": "tr('Login shell')"
            }
        }, {
            "class": "gosa.ui.widgets.QComboBoxWidget",
            "modelPath": "loginShell",
            "addOptions": {
                "row": 1,
                "column": 1
            },
            "properties": {
                "tabIndex": 2
            }
        }, {
            "class": "qx.ui.core.Widget",
            "addOptions": {
                "row": 2,
                "column": 0
            },
            "properties": {
                "width": 20,
                "height": 5
            }
        }, {
            "class": "gosa.ui.widgets.QCheckBoxWidget",
            "modelPath": "autoGECOS",
            "addOptions": {
                "row": 3,
                "column": 0,
                "colSpan": 2
            },
            "properties": {
                "tabIndex": 3,
                "label": "tr('Automatic GECOS')"
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "gecos",
            "addOptions": {
                "row": 4,
                "column": 0
            },
            "properties": {
                "text": "tr('GECOS')"
            }
        }, {
            "class": "gosa.ui.widgets.QLineEditWidget",
            "modelPath": "gecos",
            "addOptions": {
                "row": 4,
                "column": 1
            },
            "properties": {
                "tabIndex": 4
            }
        }, {
            "class": "qx.ui.core.Widget",
            "addOptions": {
                "row": 5,
                "column": 0
            },
            "properties": {
                "width": 20,
                "height": 5
            }
        }, {
            "class": "gosa.ui.widgets.QCheckBoxWidget",
            "modelPath": "autoIDs",
            "addOptions": {
                "row": 6,
                "column": 0,
                "colSpan": 2
            },
            "properties": {
                "label": "tr('Automatic UID/GID numbers')",
                "tabIndex": 5
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "uidNumber",
            "addOptions": {
                "row": 7,
                "column": 0
            },
            "properties": {
                "text": "tr('User ID')"
            }
        }, {
            "class": "gosa.ui.widgets.QSpinBoxWidget",
            "modelPath": "uidNumber",
            "addOptions": {
                "row": 7,
                "column": 1
            },
            "properties": {
                "tabIndex": 6
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "gidNumber",
            "addOptions": {
                "row": 8,
                "column": 0
            },
            "properties": {
                "text": "tr('Group ID')"
            }
        }, {
            "class": "gosa.ui.widgets.QSpinBoxWidget",
            "modelPath": "gidNumber",
            "addOptions": {
                "row": 8,
                "column": 1
            },
            "properties": {
                "tabIndex": 7
            }
        }]
    }, {
        "class": "gosa.ui.widgets.GroupBox",
        "layout": "qx.ui.layout.VBox",
        "properties": {
            "legend": "tr('Group membership')"
        },
        "children": [{
            "class": "gosa.ui.widgets.QTableWidgetWidget",
            "modelPath": "groupMembership",
            "addOptions": {
                "flex": 1
            },
            "properties": {
                "multivalue": true,
                "maxHeight": 280
            },
            "extensions": {
                "guiProperties": {
                    "editTitle": "tr('Edit group membership')",
                    "columns": {
                        "cn": "tr('Name')",
                        "description": "tr('Description')"
                    },
                    "selectorOptions": {
                        "filters": {
                            "base": {
                                "use": "_adjusted_parent_dn",
                                "mode": "children"
                            },
                            "type": true,
                            "search": true
                        }
                    },
                    "sortByColumn": "cn"
                }
            }
        }]
    }]
}
