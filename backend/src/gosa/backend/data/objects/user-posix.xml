<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.gonicus.de/Objects ../object.xsd ">
  <Object>
    <Name>PosixUser</Name>
    <DisplayName>POSIX extension</DisplayName>
    <Templates>
      <Template>user-posix.json</Template>
    </Templates>
    <Description>A posix extension for a generic user</Description>
    <BaseObject>false</BaseObject>
    <BackendParameters>
      <Backend objectClasses="posixAccount">LDAP</Backend>
      <Backend groupMembership="PosixGroup:cn,memberUid=uid">ObjectHandler</Backend>
    </BackendParameters>
    <Backend>LDAP</Backend>

    <Attributes>
      <ForeignAttribute>
        <Name>uid</Name>
      </ForeignAttribute>
      <ForeignAttribute>
        <Name>sn</Name>
      </ForeignAttribute>
      <ForeignAttribute>
        <Name>givenName</Name>
      </ForeignAttribute>
      <ForeignAttribute>
        <Name>ou</Name>
      </ForeignAttribute>
      <ForeignAttribute>
        <Name>homePhone</Name>
      </ForeignAttribute>
      <ForeignAttribute>
        <Name>telephoneNumber</Name>
      </ForeignAttribute>

      <Attribute>
        <Name>groupMembership</Name>
        <Description>A list on posix-group names this user is member of</Description>
        <Type>String</Type>
        <Backend>ObjectHandler</Backend>
        <MultiValue>true</MultiValue>
        <Validators>
          <Condition>
            <Name>ObjectWithPropertyExists</Name>
            <Param>PosixGroup</Param>
            <Param>cn</Param>
          </Condition>
        </Validators>
      </Attribute>

      <Attribute>
        <Name>uidNumber</Name>
        <Unique>true</Unique>
        <Description>An integer uniquely identifying a user in an administrative domain</Description>
        <Type>Integer</Type>
        <Mandatory>true</Mandatory>
        <Validators>
          <Condition>
            <Name>Smaller</Name>
            <Param>65500</Param>
          </Condition>
        </Validators>
        <BlockedBy>
          <Attribute value="true">autoIDs</Attribute>
        </BlockedBy>
        <DependsOn>
          <Attribute>autoIDs</Attribute>
        </DependsOn>
      </Attribute>

      <Attribute>
        <Name>gidNumber</Name>
        <Description>An integer uniquely identifying a group in an administrative domain</Description>
        <Type>Integer</Type>
        <Mandatory>true</Mandatory>
        <BlockedBy>
          <Attribute value="true">autoIDs</Attribute>
        </BlockedBy>
        <Validators>
          <Condition>
            <Name>Smaller</Name>
            <Param>65500</Param>
          </Condition>
        </Validators>
        <DependsOn>
          <Attribute>autoIDs</Attribute>
        </DependsOn>
      </Attribute>

      <Attribute>
        <Name>homeDirectory</Name>
        <Description>The absolute path to the home directory</Description>
        <Type>String</Type>
        <Mandatory>true</Mandatory>
      </Attribute>

      <Attribute>
        <Name>loginShell</Name>
        <Description>The path to the login shell</Description>
        <Type>String</Type>
		<Values populate="getShellList"/>
      </Attribute>

      <Attribute>
        <Name>gecos</Name>
        <Description>The GECOS field; the common name</Description>
        <Type>UnicodeString</Type>
        <BlockedBy>
          <Attribute value="true">autoGECOS</Attribute>
        </BlockedBy>
        <DependsOn>
          <Attribute>autoGECOS</Attribute>
        </DependsOn>
      </Attribute>
      <Attribute>
        <Name>autoGECOS</Name>
        <Default>true</Default>
        <Mandatory>true</Mandatory>
        <Backend>NULL</Backend>
        <Type>Boolean</Type>
        <OutFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>GenerateGecos</Name>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </OutFilter>
        <InFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>LoadGecosState</Name>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </InFilter>
        <DependsOn>
          <Attribute>givenName</Attribute>
          <Attribute>sn</Attribute>
          <Attribute>homePhone</Attribute>
          <Attribute>telephoneNumber</Attribute>
          <Attribute>ou</Attribute>
        </DependsOn>
      </Attribute>
      <Attribute>
        <Name>autoIDs</Name>
        <Default>true</Default>
        <Mandatory>true</Mandatory>
        <Backend>NULL</Backend>
        <Type>Boolean</Type>
        <Auto>true</Auto>
        <OutFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>GenerateIDs</Name>
                <Param>65500</Param>
                <Param>65500</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </OutFilter>
      </Attribute>
    </Attributes>
    <Hooks>
      <Hook>
        <Type>PostCreate</Type>
        <Command>createAddGroupIfNotExists</Command>
        <CommandParameters>
          <Value>dn</Value>
          <Value>uid</Value>
          <Value>gidNumber</Value>
        </CommandParameters>
      </Hook>
    </Hooks>
    <Extends>
      <Value>User</Value>
    </Extends>
  </Object>
</Objects>


