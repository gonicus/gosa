<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects">
  <Object>
    <Name>ForemanHost</Name>
    <DisplayName>Deployment</DisplayName>
    <Description>The foreman - this device is managed by foreman</Description>
    <Templates>
      <Template>foreman-host.json</Template>
    </Templates>
    <BackendParameters>
      <Backend objectClasses="foremanHost">LDAP</Backend>
      <Backend type="hosts" _uuidAttribute="cn" _uuidSourceAttribute="name" mapping="mac:macAddress,ip:ipHostNumber,uuid:deviceUUID"
               needs="status">Foreman</Backend>
      <Backend groupMembership="ForemanHostGroup:foremanGroupId,member=dn">ObjectHandler</Backend>
    </BackendParameters>
    <Backend>LDAP</Backend>
    <BaseObject>false</BaseObject>
    <Attributes>
      <ForeignAttribute>
        <Name>cn</Name>
      </ForeignAttribute>
      <ForeignAttribute>
        <Name>ipHostNumber</Name>
      </ForeignAttribute>
      <ForeignAttribute>
          <Name>macAddress</Name>
      </ForeignAttribute>
      <Attribute>
        <Name>status</Name>
        <Description>The foreman - current device status</Description>
        <Type>String</Type>
        <Default>unknown</Default>
        <Values>
          <Value key="unknown">Unknown</Value>
          <Value key="pending">Pending</Value>
          <Value key="install">Installing</Value>
          <Value key="deploy">Deploying</Value>
          <Value key="ready">Ready</Value>
          <Value key="warning">Warning</Value>
          <Value key="error">Error</Value>
          <Value key="token-expired">Token expired</Value>
          <Value key="discovered">Discovered</Value>
        </Values>
        <DependsOn>
          <Attribute>build_status</Attribute>
          <Attribute>global_status</Attribute>
        </DependsOn>
      </Attribute>
      <Attribute>
        <Name>groupMembership</Name>
        <Description>Assigned host group</Description>
        <Type>String</Type>
        <Backend>ObjectHandler</Backend>
        <Validators>
          <Condition>
            <Name>ObjectWithPropertyExists</Name>
            <Param>ForemanHostGroup</Param>
            <Param>foremanGroupId</Param>
          </Condition>
        </Validators>
        <DependsOn>
          <Attribute>hostgroup_id</Attribute>
        </DependsOn>
      </Attribute>
      <Attribute>
        <Name>build_status</Name>
        <Description>Foreman build status ID</Description>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <ReadOnly>true</ReadOnly>
        <InFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>ForemanStatusIn</Name>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </InFilter>
      </Attribute>
      <Attribute>
        <Name>global_status</Name>
        <Description>Foreman global status ID</Description>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <ReadOnly>true</ReadOnly>
        <InFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>ForemanStatusIn</Name>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </InFilter>
      </Attribute>
      <Attribute>
        <Name>hostgroup_id</Name>
        <Description>ID of the hostgroup this host is part of</Description>
        <Type>String</Type>
        <BackendType>Integer</BackendType>
        <Backend>Foreman</Backend>
        <InFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>IntegerToString</Name>
              </Filter>
            </FilterEntry>
            <FilterEntry>
              <Filter>
                <Name>CopyValueTo</Name>
                <Param>groupMembership</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </InFilter>
        <OutFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>CopyValueFrom</Name>
                <Param>groupMembership</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </OutFilter>
      </Attribute>
      <Attribute>
        <Name>ip</Name>
        <Description>IP address</Description>
        <Type>String</Type>
        <Backend>Foreman</Backend>
        <DependsOn>
          <Attribute>ipHostNumber</Attribute>
        </DependsOn>
        <InFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>CopyValueTo</Name>
                <Param>ipHostNumber</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </InFilter>
        <OutFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>CopyValueFrom</Name>
                <Param>ipHostNumber</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </OutFilter>
      </Attribute>
      <Attribute>
        <Name>mac</Name>
        <Description>MAC address</Description>
        <Type>String</Type>
        <Backend>Foreman</Backend>
        <DependsOn>
          <Attribute>macAddress</Attribute>
        </DependsOn>
        <InFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>CopyValueTo</Name>
                <Param>macAddress</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </InFilter>
        <OutFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>CopyValueFrom</Name>
                <Param>macAddress</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </OutFilter>
      </Attribute>

      <Attribute>
        <Name>compute_resource_id</Name>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <Values populate="getForemanComputeResources"/>
      </Attribute>

      <Attribute>
        <Name>domain_id</Name>
        <Description>Domain the host should be added to</Description>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <InheritFrom relation="hostgroup_id">getForemanHostgroup</InheritFrom>
        <Values populate="getForemanDomains"/>
      </Attribute>

      <Attribute>
        <Name>operatingsystem_id</Name>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <Values populate="getForemanOperatingSystems" refresh-on-update="true"/>
        <InheritFrom relation="hostgroup_id">getForemanHostgroup</InheritFrom>
      </Attribute>

      <Attribute>
        <Name>pxe_loader</Name>
        <Type>UnicodeString</Type>
        <Backend>Foreman</Backend>
        <InheritFrom relation="hostgroup_id">getForemanHostgroup</InheritFrom>
        <Values>
          <Value>PXELinux BIOS</Value>
          <Value>PXELinux UEFI</Value>
          <Value>Grub UEFI 64bit</Value>
          <Value>Grub UEFI 32bit</Value>
          <Value>Grub SecureBoot</Value>
          <Value>Grub2 UEFI 64bit</Value>
          <Value>Grub2 UEFI 32bit</Value>
          <Value>Grub2 SecureBoot</Value>
          <Value>None</Value>
        </Values>
      </Attribute>

      <Attribute>
        <Name>architecture_id</Name>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <Values populate="getForemanArchitectures" refresh-on-update="true"/>
        <InheritFrom relation="hostgroup_id">getForemanHostgroup</InheritFrom>
      </Attribute>

      <Attribute>
        <Name>ptable_id</Name>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <Values populate="getForemanPartitionTables" refresh-on-update="true"/>
        <InheritFrom relation="hostgroup_id">getForemanHostgroup</InheritFrom>
      </Attribute>

      <Attribute>
        <Name>medium_id</Name>
        <Type>Integer</Type>
        <Backend>Foreman</Backend>
        <Values populate="getForemanMedia" refresh-on-update="true"/>
        <InheritFrom relation="hostgroup_id">getForemanHostgroup</InheritFrom>
      </Attribute>

      <Attribute>
        <Name>root_pass</Name>
        <Type>UnicodeString</Type>
        <Backend>Foreman</Backend>
        <InheritFrom relation="hostgroup_id">getForemanHostgroup</InheritFrom>
      </Attribute>

      <Attribute>
        <Name>build</Name>
        <Type>Boolean</Type>
        <Backend>Foreman</Backend>
      </Attribute>

      <Attribute>
        <Name>name</Name>
        <Type>UnicodeString</Type>
        <Backend>Foreman</Backend>
        <DependsOn>
          <Attribute>cn</Attribute>
        </DependsOn>
        <InFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>CopyValueTo</Name>
                <Param>cn</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </InFilter>
        <OutFilter>
          <FilterChain>
            <FilterEntry>
              <Filter>
                <Name>CopyValueFrom</Name>
                <Param>cn</Param>
              </Filter>
            </FilterEntry>
          </FilterChain>
        </OutFilter>
      </Attribute>
    </Attributes>
    <Methods>
      <Method>
        <Name>bootFromDisk</Name>
        <Command>bootHost</Command>
        <MethodParameters>
          <MethodParameter>
            <Name>device</Name>
            <Type>UnicodeString</Type>
            <Default>disk</Default>
          </MethodParameter>
        </MethodParameters>
        <CommandParameters>
          <Value>cn</Value>
          <Value>device</Value>
        </CommandParameters>
      </Method>
      <Method>
        <Name>bootFromPxe</Name>
        <Command>bootHost</Command>
        <MethodParameters>
          <MethodParameter>
            <Name>device</Name>
            <Type>UnicodeString</Type>
            <Default>pxe</Default>
          </MethodParameter>
        </MethodParameters>
        <CommandParameters>
          <Value>cn</Value>
          <Value>device</Value>
        </CommandParameters>
      </Method>
      <Method>
        <Name>powerStart</Name>
        <Command>powerHost</Command>
        <MethodParameters>
          <MethodParameter>
            <Name>action</Name>
            <Type>UnicodeString</Type>
            <Default>start</Default>
          </MethodParameter>
        </MethodParameters>
        <CommandParameters>
          <Value>cn</Value>
          <Value>action</Value>
        </CommandParameters>
      </Method>
      <Method>
        <Name>poweroff</Name>
        <Command>powerHost</Command>
        <MethodParameters>
          <MethodParameter>
            <Name>action</Name>
            <Type>UnicodeString</Type>
            <Default>stop</Default>
          </MethodParameter>
        </MethodParameters>
        <CommandParameters>
          <Value>cn</Value>
          <Value>action</Value>
        </CommandParameters>
      </Method>
      <Method>
        <Name>powerOn</Name>
        <Command>powerHost</Command>
        <MethodParameters>
          <MethodParameter>
            <Name>action</Name>
            <Type>UnicodeString</Type>
            <Default>start</Default>
          </MethodParameter>
        </MethodParameters>
        <CommandParameters>
          <Value>cn</Value>
          <Value>action</Value>
        </CommandParameters>
      </Method>
      <Method>
        <Name>reboot</Name>
        <Command>powerHost</Command>
        <MethodParameters>
          <MethodParameter>
            <Name>action</Name>
            <Type>UnicodeString</Type>
            <Default>reboot</Default>
          </MethodParameter>
        </MethodParameters>
        <CommandParameters>
          <Value>cn</Value>
          <Value>action</Value>
        </CommandParameters>
      </Method>
      <Method>
        <Name>reset</Name>
        <Command>powerHost</Command>
        <MethodParameters>
          <MethodParameter>
            <Name>action</Name>
            <Type>UnicodeString</Type>
            <Default>reset</Default>
          </MethodParameter>
        </MethodParameters>
        <CommandParameters>
          <Value>cn</Value>
          <Value>action</Value>
        </CommandParameters>
      </Method>
      <Method>
        <Name>runPuppet</Name>
        <Command>doPuppetRun</Command>
        <CommandParameters>
          <Value>cn</Value>
        </CommandParameters>
      </Method>
    </Methods>
    <Extends>
      <Value>Device</Value>
    </Extends>
  </Object>
</Objects>
