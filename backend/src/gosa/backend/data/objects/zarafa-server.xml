<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects">
  <Object>
    <Name>ZarafaServer</Name>
    <DisplayName>Zarafa server</DisplayName>
    <Description>ZARAFA: a Zarafa server</Description>
    <Backend>LDAP</Backend>
    <BackendParameters>
      <Backend objectClasses="zarafa-server">LDAP</Backend>
    </BackendParameters>
    <Templates>
      <Template>zarafa-server.json</Template>
    </Templates>
    <BaseObject>false</BaseObject>
    <Extends>
      <Value>Device</Value>
    </Extends>
    <Attributes>
      <ForeignAttribute>
        <Name>cn</Name>
      </ForeignAttribute>
      <Attribute>
        <Name>zarafaAccount</Name>
        <Description>ZARAFA: entry is a part of zarafa</Description>
        <Type>Boolean</Type>
        <BackendType>Integer</BackendType>
        <InFilter>
            <FilterChain>
                <FilterEntry>
                    <Filter>
                        <Name>IntegerToBoolean</Name>
                    </Filter>
                </FilterEntry>
            </FilterChain>
        </InFilter>
        <OutFilter>
            <FilterChain>
                <FilterEntry>
                    <Filter>
                        <Name>BooleanToInteger</Name>
                    </Filter>
                </FilterEntry>
            </FilterChain>
        </OutFilter>
      </Attribute>
      <Attribute>
        <Name>zarafaHidden</Name>
        <Description>ZARAFA: This object should be hidden from address book</Description>
        <Type>Boolean</Type>
        <BackendType>Integer</BackendType>
        <InFilter>
            <FilterChain>
                <FilterEntry>
                    <Filter>
                        <Name>IntegerToBoolean</Name>
                    </Filter>
                </FilterEntry>
            </FilterChain>
        </InFilter>
        <OutFilter>
            <FilterChain>
                <FilterEntry>
                    <Filter>
                        <Name>BooleanToInteger</Name>
                    </Filter>
                </FilterEntry>
            </FilterChain>
        </OutFilter>
        <Default>true</Default>
      </Attribute>
      <Attribute>
        <Name>zarafaHttpPort</Name>
        <Description>ZARAFA: Port for the http connection</Description>
        <Type>Integer</Type>
        <Validators>
          <Condition>
            <Name>Greater</Name>
            <Param>0</Param>
          </Condition>
        </Validators>
      </Attribute>
      <Attribute>
        <Name>zarafaSslPort</Name>
        <Description>ZARAFA: Port for the ssl connection</Description>
        <Type>Integer</Type>
        <Validators>
          <Condition>
            <Name>Greater</Name>
            <Param>0</Param>
          </Condition>
        </Validators>
      </Attribute>
      <Attribute>
        <Name>zarafaFilePath</Name>
        <Description>ZARAFA: The unix socket or named pipe to the server</Description>
        <Type>UnicodeString</Type>
        <Validators>
          <Condition>
            <Name>RegEx</Name>
            <Param>^(/[^/ ]*)+/?$</Param>
          </Condition>
        </Validators>
      </Attribute>
      <Attribute>
        <Name>zarafaContainsPublic</Name>
        <Description>ZARAFA: This server contains the public store</Description>
        <Type>Boolean</Type>
        <BackendType>Integer</BackendType>
        <InFilter>
            <FilterChain>
                <FilterEntry>
                    <Filter>
                        <Name>IntegerToBoolean</Name>
                    </Filter>
                </FilterEntry>
            </FilterChain>
        </InFilter>
        <OutFilter>
            <FilterChain>
                <FilterEntry>
                    <Filter>
                        <Name>BooleanToInteger</Name>
                    </Filter>
                </FilterEntry>
            </FilterChain>
        </OutFilter>
        <Default>true</Default>
      </Attribute>
      <Attribute>
        <Name>zarafaProxyURL</Name>
        <Description>ZARAFA: Full proxy URL for this server</Description>
        <Type>UnicodeString</Type>
        <Validators>
          <Condition>
            <Name>IsValidURL</Name>
          </Condition>
        </Validators>
      </Attribute>
    </Attributes>
  </Object>
</Objects>
