<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects">
    <Object>
        <Name>GosaApplication</Name>
        <DisplayName>Application</DisplayName>
        <Description>Class for GOsa applications (v2.7)</Description>
        <Backend>LDAP</Backend>
        <BackendParameters>
            <Backend objectClasses="gosaApplication" RDN="cn">LDAP</Backend>
        </BackendParameters>
        <BaseObject>true</BaseObject>
        <Templates>
            <Template>gosaApplication.json</Template>
            <Template>gosaApplicationScript.json</Template>
        </Templates>
        <Attributes>
            <Attribute>
                <Name>gosaApplicationExecute</Name>
                <Description>Specifies the executable path of an application</Description>
                <Type>UnicodeString</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>true</Mandatory>
            </Attribute>
            <Attribute>
                <Name>cn</Name>
                <Description>RFC4519: common name(s) for which the entity is known by</Description>
                <Type>UnicodeString</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>true</Mandatory>
            </Attribute>
            <Attribute>
                <Name>gosaApplicationParameter</Name>
                <Description>Store application parameters</Description>
                <Type>UnicodeString</Type>
                <MultiValue>true</MultiValue>
                <Mandatory>false</Mandatory>
            </Attribute>
            <Attribute>
                <Name>gosaApplicationIcon</Name>
                <Description>Keeps the application icon in png format</Description>
                <Type>Binary</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>false</Mandatory>
            </Attribute>
            <Attribute>
                <Name>execForGroupmembers</Name>
                <Type>Boolean</Type>
                <Backend>NULL</Backend>
            </Attribute>
            <Attribute>
                <Name>overwriteConfig</Name>
                <Type>Boolean</Type>
                <Backend>NULL</Backend>
            </Attribute>
            <Attribute>
                <Name>placeOnKicker</Name>
                <Type>Boolean</Type>
                <Backend>NULL</Backend>
            </Attribute>
            <Attribute>
                <Name>placeOnDesktop</Name>
                <Type>Boolean</Type>
                <Backend>NULL</Backend>
            </Attribute>
            <Attribute>
                <Name>placeInStartmenu</Name>
                <Type>Boolean</Type>
                <Backend>NULL</Backend>
            </Attribute>
            <Attribute>
                <Name>gosaApplicationFlags</Name>
                <Description>Specifies the application flags G(roup only), D(esktop), M(enu)</Description>
                <Type>String</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>false</Mandatory>
                <Validators>
                    <Condition>
                        <Name>RegEx</Name>
                        <Param>^[\x00-\x7F]*$</Param>
                    </Condition>
                </Validators>
                <DependsOn>
                    <Attribute>execForGroupmembers</Attribute>
                    <Attribute>overwriteConfig</Attribute>
                    <Attribute>placeOnKicker</Attribute>
                    <Attribute>placeOnDesktop</Attribute>
                    <Attribute>placeInStartmenu</Attribute>
                </DependsOn>
                <InFilter>
                    <FilterChain>
                        <FilterEntry>
                            <Filter>
                                <Name>UnmarshalFlags</Name>
                                <Param>G,O,L,D,M</Param>
                                <Param>execForGroupmembers,overwriteConfig,placeOnKicker,placeOnDesktop,placeInStartmenu</Param>
                            </Filter>
                        </FilterEntry>
                    </FilterChain>
                </InFilter>
                <OutFilter>
                    <FilterChain>
                        <FilterEntry>
                            <Filter>
                                <Name>MarshalFlags</Name>
                                <Param>G,O,L,D,M</Param>
                                <Param>execForGroupmembers,overwriteConfig,placeOnKicker,placeOnDesktop,placeInStartmenu</Param>
                            </Filter>
                        </FilterEntry>
                    </FilterChain>
                </OutFilter>
            </Attribute>
            <Attribute>
                <Name>gosaApplicationCategory</Name>
                <Description>Store application parameters</Description>
                <Type>UnicodeString</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>false</Mandatory>
            </Attribute>
            <Attribute>
                <Name>description</Name>
                <Description>RFC4519: descriptive information</Description>
                <Type>UnicodeString</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>false</Mandatory>
            </Attribute>
            <Attribute>
                <Name>gosaApplicationMimeType</Name>
                <Description>Takes a list of relevant mime-type|priority settings</Description>
                <Type>String</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>false</Mandatory>
                <Validators>
                    <Condition>
                        <Name>RegEx</Name>
                        <Param>^[\x00-\x7F]*$</Param>
                    </Condition>
                </Validators>
            </Attribute>
            <Attribute>
                <Name>gosaApplicationName</Name>
                <Description>Specifies the name of an application to be shown up on users desktop</Description>
                <Type>UnicodeString</Type>
                <MultiValue>false</MultiValue>
                <Mandatory>false</Mandatory>
            </Attribute>
            <Attribute>
                <Name>gotoLogonScript</Name>
                <Description>GOto - specifies a LogonScript</Description>
                <Type>UnicodeString</Type>
                <MultiValue>false</MultiValue>
                <Validators>
                    <Condition>
                        <Name>ScriptLint</Name>
                    </Condition>
                </Validators>
            </Attribute>
        </Attributes>
        <Find>
            <Aspect>
                <Tag>GosaApplication</Tag>
                <Keyword>GosaApplication</Keyword>
                <Keyword>Application</Keyword>
                <Search>cn</Search>
                <Search>description</Search>
                <Search>gosaApplicationName</Search>
                <Result>
                    <Map>
                        <Source>cn</Source>
                        <Destination>title</Destination>
                    </Map>
                </Result>
            </Aspect>
        </Find>
    </Object>
</Objects>
