<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.gonicus.de/Objects ../object.xsd ">
	<Object>
		<Name>RegisteredDevice</Name>
		<Description>The registeredDevice is a device that is known to GOsa and will display additional information.</Description>
		<DisplayName>RegisteredDevice</DisplayName>
		<BackendParameters>
			<Backend objectClasses="registeredDevice">LDAP</Backend>
			<Backend manager="User:dn,">ObjectHandler</Backend>
		</BackendParameters>
		<Templates>
			<Template>device-registered.json</Template>
		</Templates>
		<Backend>LDAP</Backend>
		<Attributes>
			<Attribute>
				<Name>manager</Name>
				<Description>DN of manager</Description>
				<Type>UnicodeString</Type>
				<Validators>
					<Condition>
						<Name>IsExistingDnOfType</Name>
						<Param>User</Param>
					</Condition>
				</Validators>
			</Attribute>
			<Attribute>
				<Name>deviceKey</Name>
				<Description>This attribute keeps the encrypted (initial) device secret</Description>
				<Type>Binary</Type>
			</Attribute>
			<Attribute>
				<Name>deviceStatus</Name>
				<Description>The deviceStatus attribute represents several states a system can represent.
					Note that this is the current status - i.e. no history of states is
					recordable this way. The attribute is mostly used to quickly determine
					the state without reading system logs.
				</Description>
				<Type>String</Type>
				<ReadOnly>true</ReadOnly>
				<DependsOn>
					<Attribute>status_Online</Attribute>
					<Attribute>status_Offline</Attribute>
					<Attribute>status_UpdateAvailable</Attribute>
					<Attribute>status_UpdateInProgress</Attribute>
					<Attribute>status_InventoryInProgress</Attribute>
					<Attribute>status_ConfigurationInProgress</Attribute>
					<Attribute>status_InstallationInProgress</Attribute>
					<Attribute>status_VirtualMachineCreationInProgress</Attribute>
					<Attribute>status_Warning</Attribute>
					<Attribute>status_Error</Attribute>
					<Attribute>status_SystemHasActiveUserSessions</Attribute>
					<Attribute>status_SystemActivated</Attribute>
					<Attribute>status_SystemLocked</Attribute>
				</DependsOn>
				<InFilter>
					<FilterChain>
						<FilterEntry>
							<Filter>
								<Name>registeredDeviceStatusIn</Name>
							</Filter>
						</FilterEntry>
					</FilterChain>
				</InFilter>
				<OutFilter>
					<FilterChain>
						<FilterEntry>
							<Filter>
								<Name>registeredDeviceStatusOut</Name>
							</Filter>
						</FilterEntry>
					</FilterChain>
				</OutFilter>
			</Attribute>
			<Attribute>
				<Name>deviceType</Name>
				<Description>To order systems, you can mark a system i.e. as a server</Description>
				<Type>String</Type>
				<Values>
					<Value>terminal</Value>
					<Value>workstation</Value>
					<Value>server</Value>
					<Value>sipphone</Value>
					<Value>switch</Value>
					<Value>router</Value>
					<Value>printer</Value>
					<Value>scanner</Value>
				</Values>
			</Attribute>
			<Attribute>
				<Name>deviceUUID</Name>
				<Description>This attribute keeps a unique identifier for a device that should be
					registered to the GOsa services. It is used as a unique key to find
					the relationship of the registered device to other information like
					inventory, received events and logging data.
				</Description>
				<Type>String</Type>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_Online</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_Offline</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_UpdateAvailable</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_UpdateInProgress</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_InventoryInProgress</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_ConfigurationInProgress</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_InstallationInProgress</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_VirtualMachineCreationInProgress</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_Warning</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_Error</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_SystemHasActiveUserSessions</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_SystemActivated</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>status_SystemLocked</Name>
				<Description/>
				<Backend>NULL</Backend>
				<Type>Boolean</Type>
				<Default>false</Default>
				<Mandatory>true</Mandatory>
			</Attribute>
			<Attribute>
				<Name>gotoLastUser</Name>
				<Type>String</Type>
				<References>
					<Reference>
						<Object>PosixUser</Object>
						<Attribute>uid</Attribute>
					</Reference>
				</References>
				<Validators>
					<Condition>
						<Name>ObjectWithPropertyExists</Name>
						<Param>PosixUser</Param>
						<Param>uid</Param>
					</Condition>
				</Validators>
			</Attribute>
		</Attributes>
		<Methods>
			<Method>
				<Name>configureClient</Name>
				<Command>configureClient</Command>
				<CommandParameters>
					<Value>deviceUUID</Value>
				</CommandParameters>
			</Method>
			<Method>
				<Name>rebootClient</Name>
				<Command>clientDispatch</Command>
				<MethodParameters>
					<MethodParameter>
						<Name>method</Name>
						<Type>UnicodeString</Type>
						<Required>true</Required>
						<Default>reboot</Default>
					</MethodParameter>
				</MethodParameters>
				<CommandParameters>
					<Value>deviceUUID</Value>
					<Value>method</Value>
				</CommandParameters>
			</Method>
			<Method>
				<Name>canReboot</Name>
				<Command>hasCapability</Command>
				<MethodParameters>
					<MethodParameter>
						<Name>method</Name>
						<Type>UnicodeString</Type>
						<Required>true</Required>
						<Default>reboot</Default>
					</MethodParameter>
				</MethodParameters>
				<CommandParameters>
					<Value>deviceUUID</Value>
					<Value>method</Value>
				</CommandParameters>
			</Method>
		</Methods>
		<Extends>
			<Value>Device</Value>
		</Extends>
		<BaseObject>false</BaseObject>
	</Object>
</Objects>


