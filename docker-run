#!/usr/bin/env bash

cid=$(docker ps -a -f name=gosa-dev-helper --quiet)
if [[ ! -z "$cid" ]]; then
    docker rm $cid
fi
export COMMAND=$@
docker run --privileged --net=host -it -v "$(pwd)":"$(pwd)" -v /dev/shm:/dev/shm --name gosa-dev-helper --workdir "$(pwd)" -e COMMAND peuter/gosa-dev-helper:latest
